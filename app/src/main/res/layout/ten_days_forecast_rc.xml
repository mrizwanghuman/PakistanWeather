<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/cvTenDaysForecast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/llTenDays"
        android:background="@color/pakGreen"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvWeekDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_gravity="center"
        android:text="Thu"
        android:textColor="#013243"
        android:textSize="28sp" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="27/11/2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/ivConditionIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_settings_white_24dp"
         />
<LinearLayout
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvHighTemp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginRight="20dp"
        android:text="16 F"
      />

    <TextView
        android:id="@+id/tvLowTemp"
        style="@style/rizWhiteSmallSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="10 F"
        />
</LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
